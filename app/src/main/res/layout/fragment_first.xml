<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstFragment"
    android:padding="16dp">

 <TextView
     android:id="@+id/titleTextView"
     android:text="@string/hello"
     android:textColor="@color/light_purple"
     android:layout_height="@dimen/text_title_height"
     app:layout_constraintEnd_toEndOf="parent"
     app:layout_constraintHorizontal_bias="0.49"
     app:layout_constraintStart_toStartOf="parent"
     app:layout_constraintTop_toTopOf="parent"
     style="@style/titleStyle" />

 <Button
     android:id="@+id/buttonStartToStory"
     style="@style/buttomStyle"
     android:text="@string/start"
     app:layout_constraintBottom_toBottomOf="parent"
     app:layout_constraintEnd_toEndOf="parent"
     app:layout_constraintStart_toStartOf="parent"
     app:layout_constraintTop_toBottomOf="@+id/titleTextView"
     app:layout_constraintVertical_bias="0.923" />

 <Button
     android:id="@+id/buttonChangeImage"
     android:layout_width="163dp"
     android:layout_height="33dp"
     android:fontFamily="monospace"
     android:gravity="center"
     android:text="@string/change_the_image"
     android:textAlignment="center"
     android:textSize="10sp"
     android:textStyle="italic"
     app:layout_constraintBottom_toBottomOf="parent"
     app:layout_constraintEnd_toEndOf="parent"
     app:layout_constraintHorizontal_bias="0.498"
     app:layout_constraintStart_toStartOf="parent"
     app:layout_constraintTop_toBottomOf="@+id/buttonStartToStory"
     app:layout_constraintVertical_bias="0.669"
     tools:ignore="TouchTargetSizeCheck"
     style="@style/buttomStyle"/>

 <ImageView
     android:id="@+id/imageView"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:contentDescription="@string/todo"
     android:gravity="center"
     app:layout_constraintBottom_toTopOf="@+id/buttonStartToStory"
     app:layout_constraintEnd_toEndOf="parent"
     app:layout_constraintStart_toStartOf="parent"
     app:layout_constraintTop_toBottomOf="@+id/titleTextView"
     app:layout_constraintVertical_bias="0.384"
     tools:srcCompat="@drawable/dino_coso" />

</androidx.constraintlayout.widget.ConstraintLayout>